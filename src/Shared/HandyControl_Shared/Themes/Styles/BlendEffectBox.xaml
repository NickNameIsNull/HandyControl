<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:hc="clr-namespace:HandyControl.Controls">

    <Style TargetType="hc:BlendEffectBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="hc:BlendEffectBox">
                    <ContentPresenter ContentSource="ActualContent">
                        <!-- Flag Syncfusion HandyControl StyleCodeConflict -->
                        <ContentPresenter.Resources>
                            <Style BasedOn="{StaticResource TextBlockBaseStyle}"
                                   TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="{Binding (TextElement.Foreground), RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            </Style>
                        </ContentPresenter.Resources>
                    </ContentPresenter>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
